<!-- views/indianStates.ejs -->
<h1 class="pb-4">Explore Indian States</h1>
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
    <li class="breadcrumb-item active" aria-current="page">Indian States</li>
  </ol>
</nav>
<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
  <% indianStates.forEach(function(state){ %>
    <a href="/categories/Indian/<%= state %>" class="col text-center category__link">
        <div class="category__img shadow">
            <img
              src="/img/<%= state %>.jpg"
              alt="<%- state %>"
              loading="lazy"
            />
          </div>
        <div class="pt-1"><%= state %></div>
    </a>
  <% }) %>
</div>
